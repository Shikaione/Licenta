<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/resultImg"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/searchPlaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_title"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_toEndOf="@+id/resultImg"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/searchPlaceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_address"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/searchPlaceTitle"
        android:layout_toEndOf="@+id/resultImg"/>

</RelativeLayout>